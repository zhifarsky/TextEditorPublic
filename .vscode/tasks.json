{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build debug",
			"command": "${workspaceFolder}/build.bat",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"detail": "Компиляция при помощи build.bat"
		},
		{
            "label": "Run debugger",
            "type": "shell",
            "command": "raddbg --project:${workspaceFolder}/raddbg_project.rad --auto_run --quit_after_success",
            "args": [],
            "presentation": {
                "reveal": "always",
                "panel": "new", // Open a new terminal specifically for the program
                "close": false // Keep the terminal open after the program exits
            },
            "problemMatcher": []
        },
		{
            "label": "Build and Debug",
            "dependsOn": [
                "Build debug",
                "Run debugger"
            ],
            "dependsOrder": "sequence", // Ensure tasks run one after the other
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "close": true
            }
        }
	]
}